{
  "compilerOptions": {
    "baseUrl": "src/",
    // enables relative imports to root
    "outDir": "./lib",
    // typecheck js files
    "declaration": true,
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    // no emit in dev, only when bundling for prod, which is usually handled by bundlers like webpack / fuse-box / jspm
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
